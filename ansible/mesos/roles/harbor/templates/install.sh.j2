#!/bin/bash
# filename: install.sh
set -e

# Download harbor
cd {{ HARBOR_INSTALL_PATH }}
wget https://github.com/vmware/harbor/releases/download/{{ HARBOR_VERSION }}/{{ HARBOR_TAR_FILE_NAME }}
tar -xf {{ HARBOR_TAR_FILE_NAME }}

# Download docker-compose
curl -L https://github.com/docker/compose/releases/download/{{ DOCKER_COMPOSE_VERSION }}/docker-compose-{{ DOCKER_COMPOSE_SYSTEM }}-{{ DOCKER_COMPOSE_ARCH }} > /usr/local/bin/docker-compose
chmod +x /usr/local/bin/docker-compose
docker-compose version
